<div class="text-center col-md-12">

<h1 class="page-header col-md-12"><%= @league.league_name %></h1>

<table class="text-center league-table table-bordered">
		<tr>
			<th></th>
			<th>G</th>
			<th>W</th>
			<th>D</th>
			<th>L</th>
			<th>F</th>
			<th>A</th>
			<th>GD</th>
			<th>Pts</th>
		</tr>
		<% @league.teams.order(points: :desc, goals_difference: :desc).each_with_index do |team, index| %>
			<tr>
				<td style="text-align: left;">
					<%= " #{index+1}. " %>
					<%= team.team_name %>
				</td>
				<td><%= team.games_played %></td>
				<td><%= team.wins %></td>
				<td><%= team.draws %></td>
				<td><%= team.defeats %></td>
				<td><%= team.goals_scored %></td>
				<td><%= team.goals_lost %></td>
				<td><%= team.goals_difference %></td>
				<td><%= team.points %></td>
			</tr>
		<% end %>
</table>
<br/>
<h3>Calendar </h4>
<br/>

<% week = 1 %>

<% @league.matches.each_with_index do |match, index| %>
		<% if (index) % (@league.teams.count/2) == 0 or index == 0 %>
			<br/>
			<h4 class="week">WEEK <%= "#{week}" %></h4>
			<% week += 1 %>
		<% end %>
		<br/>
		<h5><%= match.match_name %></h5>
		<%= form_tag("/leagues/#{@league.id}/match") do %>
			<%= hidden_field_tag :match, match.match_name %>
			<%= text_field_tag :f_team_score, nil, { placeholder: match.first_team_score, class: "form-control score_place" } %> - 
			<%= text_field_tag :s_team_score, nil, { placeholder: match.second_team_score, class: "form-control score_place" } %>
			<%= submit_tag "add score", class: "btn btn-default" %>
		<% end %>
		
<% end %>

</div>